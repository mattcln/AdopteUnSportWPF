<Window x:Class="AdopteUnSportWPF.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdopteUnSportWPF"
        mc:Ignorable="d"
        Title="Nouveau Client" Height="450" Width="800">
    <StackPanel>
        <Label Content="Nom" Width="50"/>
        <TextBox Height="23" Width="220" TextWrapping="Wrap"/>
        <Label Content="Prénom" Width="50"/>
        <TextBox Height="23" Width="220" TextWrapping="Wrap"/>
        <Label Content="Année de naissance" Width="114"/>
        <TextBox Height="23" Width="220" TextWrapping="Wrap"/>
        <Label Content="Adresse" Width="52"/>
        <TextBox Height="23" Width="220" TextWrapping="Wrap"/>
        <Label Content="Ville" Width="32"/>
        <TextBox Height="23" Width="220" TextWrapping="Wrap"/>
        <Label Content="Adresse Email" Width="51"/>
        <TextBox Height="23" Width="220" TextWrapping="Wrap" Margin="0 0 0 20"/>
        <Button x:Name="btnValiderC" Content="Valider" Height="23" Width="70" Padding="2"/>

    </StackPanel>
</Window>
